@model ContentModel

@{
    ViewData["Title"] = "Home Page";
}

<script src="~/lib/jquery/dist/jquery.js"></script>

<style>

    .info {
        font-size:10px;
        padding:0px;
        margin:0px;
        list-style-type:none;
    }

    .container {
       background-color: #7C6D6A;
    }


    .rotated {
        transform: rotate(15deg);
    }

    .unrotated {
        transform: rotate(-15deg);
        border: 2px solid #E3E44F;
    }

    .box {
        float: left;
        width: 200px;
        margin: 30px;
    }
</style>


<script>
    $(document).ready(function () {
        //$(".info").hide();
        $(".card-body").hide();

        $(".unrotated img").click(function () {
            $(this).toggleClass("rotated");
        });

        $(".card-body").hover(function () {
            $(this).toggle();
        });

        $(".unrotated img").hover(function () {
            //$(".info").toggle();
            $(this).next("div.card-body").toggle();
            //$(".card-body").toggle();
            //console.log($(this));
        });



    });



</script>



@foreach (var file in Model.Files)
{
<div style="display:inline-block">

    <div class="box unrotated card" >
        <img class="card-img-top" src="@Url.Content(file.Path)" alt="Card image cap">
        <div class="card-body">
            <h5 class="card-title">@file.Title</h5>
            @*<p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>*@
            @*<a href="#" class="btn btn-primary">Go somewhere</a>*@
            <ul class="info">
                @*<li><strong>Title: </strong>@file.Title</li>*@
                <li><strong>Name: </strong>@file.Name</li>
                @*<li><strong>Url: </strong>@file.Url</li>*@
                <li><strong>Extension: </strong>@file.Extension</li>
                <li><strong>Length (KB): </strong>@file.LengthKb</li>
                <li><strong>Length (MB): </strong>@file.LengthMb</li>
                <li><a href="@file.Path">View</a></li>
            </ul>

        </div>
    </div>


    @*<div class="box rotated">
        <img src="@Url.Content(file.Path)" class="img-responsive" style="height:200px">
    </div>*@


